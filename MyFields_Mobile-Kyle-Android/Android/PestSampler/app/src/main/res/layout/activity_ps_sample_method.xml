<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <!-- Layout for the pest sampler sample method page -->
    <ListView
        android:id="@+id/ps_sample_method"
        android:layout_height="480dp"
        android:layout_width="match_parent"
        android:layout_weight="0.79">
    </ListView>

    <TableRow
        android:id="@+id/ps_sample_method_tablerow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/ps_sample_method_back_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/ps_control_cost_crop_value_back_button_text"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/ps_sample_method_home_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Home"
            android:layout_gravity="center_horizontal" />
    </TableRow>

</LinearLayout>